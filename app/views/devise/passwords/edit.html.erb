<br/>
<br/>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Nueva Contrase単a", class: "control-label col-sm-4" %>
    <div class="col-sm-4">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar Nueva Contrase単a", class: "control-label col-sm-4" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <%= f.submit "Cambiar mi Contrase単a", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="form-group">
  <div class="col-sm-offset-4 col-sm-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
