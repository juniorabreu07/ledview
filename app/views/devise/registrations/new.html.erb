<!-- <h2>Sign up</h2> -->
<%= render partial: "shared/flash_messages", flash: flash %>

<!-- <%= devise_error_messages! %> -->
<div class="row">
	<div class="col-sm-8 col-xs-12">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-horizontal", novalidate: "",name: "form"}) do |f| %>

			<div class="form-group">
				<label class="col-sm-offset-2 col-sm-10" style="font-weight:normal;font-size:18px;">Registrar</label>
			</div>
			<div class="form-group" ng-class="{'has-error':form.username.$invalid}">
        <label for="inputUsername" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-5">
        	<%= f.text_field :username, autofocus: true,id: "inputUsername", class: "form-control",name: "username", placeholder: "Username", required: true %>	
        </div>
      </div>
			<div class="form-group">
        <label for="inputNombre" class="col-sm-2 control-label">Nombre</label>
        <div class="col-sm-8">
	        <%= f.text_field :nombre, autofocus: true,id: "inputNombre", class: "form-control", placeholder: "Nombre" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputApellido" class="col-sm-2 control-label">Apellido</label>
        <div class="col-sm-8">
			  	<%= f.text_field :apellido, autofocus: true,id: "inputApellido", class: "form-control", placeholder: "Apellido" %>
        </div>
      </div>
			<div class="form-group"  ng-class="{'has-error':form.email.$invalid}">
        <label for="inputEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-8">
			  	<%= f.email_field :email, autofocus: true, id:"inputEmail", class: "form-control", placeholder: "Email" %>
        </div>
      </div>
			<div class="form-group">
        <label for="inputCedula" class="col-sm-2 control-label">Cedula</label>
        <div class="col-sm-10">
			  	<%= f.text_field :cedula, autofocus: true,id:"inputCedula", class: "form-control", placeholder: "Cedula" %>
        </div>
      </div>
			<div class="form-group">
        <label for="inputDireccion" class="col-sm-2 control-label">Direccion</label>
        <div class="col-sm-10">
			  	<%= f.text_field :direccion, autofocus: true,id: "inputDireccion", class: "form-control", placeholder: "Direccion" %>
        </div>
      </div>
			<div class="form-group">
        <label for="inputClave" class="col-sm-2 control-label">Clave</label>
        <div class="col-sm-5">
			  	<%= f.password_field :password, autofocus: true,id: "inputClave", class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputConfirmar" class="col-sm-2 control-label">Confirmar</label>
        <div class="col-sm-5">
			  	<%= f.password_field :password_confirmation, autofocus: true,id: "inputConfirmar", class: "form-control", placeholder: "Confirmar" %>
        </div>
      </div>
		 		<div class="form-group">
        <div class="col-sm-offset-2 col-sm-3">
        	<%= f.submit "Registrar", class: "btn btn-primary pull-right" %>
					<%= render "devise/shared/links" %>
        </div>
      </div>
		 
		  
		     <!-- <div><%#= f.submit "Sign up" %></div> -->
		<% end %>

		</div>

<!-- <div class="clearfix" style="margin-bottom:100px"></div> -->
	</div>
</div>