<%= render partial: "shared/flash_messages", flash: flash %>

<div class="clearfix" style="margin-top:100px"></div>


<div class="col-sm-5 col-sm-offset-1">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal", novalidate: ""}) do |f| %>
		<div class="form-group">
			<label class="col-sm-offset-2 col-sm-10" style="font-weight:normal;font-size:18px;">Iniciar sesión</label>
		</div>
	  <div class="form-group">
	  	<%#= f.label :username, class: "col-sm-2 control-label" %>
	  	<label for="username" class="col-sm-2 control-label"></label>
	  	<div class="col-sm-10">
	  		<%= f.email_field :username, autofocus: true, class: "form-control", placeholder: "Usuario" %>
	  	</div>
	  </div>

	  <div class="form-group">
	  	<%#= f.label :password, class: "col-sm-2 control-label" %>
	  	<label for="password" class="col-sm-2 control-label"></label>
	  	<div class="col-sm-10">
	    	<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña" %>
	  	</div>
	  </div>

    <div class="form-group">
    	<div class="col-sm-offset-2 col-sm-6">
  			<% if devise_mapping.rememberable? -%>
  				<label style="font-weight:normal;">
  					<%= f.check_box :remember_me %> Recordar mi cuenta
  				</label>
    			 <%#= f.label :remember_me %>
  			<% end -%>
    	</div>
    	<div class="col-sm-4">
  			<%= f.submit "Iniciar sesion", class: "btn btn-primary pull-right" %>
    	</div>
    </div>

    <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	<% end %>
</div>

<div class="clearfix" style="margin-bottom:100px"></div>


